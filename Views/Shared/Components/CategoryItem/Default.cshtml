@model IEnumerable<Category>

@{
    var selectedCategoryId = Context.Request.Query["CategoryId"].ToString();
}

<select id="categoryId" name="CategoryId" class="form-control" data-error="Please specify your need">
    <option value="">--All Categories--</option>
    @foreach (var category in Model)
    {
        if (@category.CategoryId.ToString().Equals(selectedCategoryId))
        {
            <option value="@category.CategoryId" selected>@category.Name</option>
        }
        else
        {
            <option value="@category.CategoryId">@category.Name</option>
        }
    }
</select>